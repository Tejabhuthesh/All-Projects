     <Page id="page" title="{i18n>title}">
    <l:ResponsiveSplitter defaultPane="default">
		<l:PaneContainer resize=".onRootContainerResize">
			<l:SplitPane requiredParentWidth="400" id="default">
				<Panel headerText="Minimum parent width 400" height="100%">
								
				</Panel>
			</l:SplitPane>
			<l:PaneContainer orientation="Vertical" resize=".onInnerContainerResize">
				<l:SplitPane requiredParentWidth="600">
					
					<Panel  >
					 <Toolbar>
             <ToolbarSpacer />
                        <Button icon="sap-icon://sort" text="Sort" press="sort" type="Transparent" />
                        <Button icon="sap-icon://locked" text="Locked" press="Lock" type="Transparent" />
                        <Button  id="editmode" icon="sap-icon://edit" text="Edit" press="onEdit" type="Transparent" />
                        <Button id="addButton" icon="sap-icon://add" text="Add" type="Transparent" press="onAdd" />
                        <Button id="deleteButton" icon="sap-icon://delete" text="Delete" type="Transparent" press="onDelite" />
                     </Toolbar>
             <content>
           <Toolbar>
             <ToolbarSpacer />
             <SearchField liveChange="onSearch" width="20%" />
           </Toolbar>
            <Table width="80rem" mode="MultiSelect" id="idProductsTable" inset="true"  headerText="EMPLOYE DETAILS" visible="true" alternateRowColors="true" items="{
			path: 'Data1>/results'
            
       
            , sorter: {
				path: 'Name',
                group: false
			} 
         
            }">
            
                    <columns>
                        <Column width="auto">
                            <Text text="Name" />
                        </Column>

                        <Column >
                            <Text text="Zemprole" />
                        </Column>

                        <Column >
                            <Text text="Zgender" />
                        </Column>

                        <Column >
                            <Text text="Zcity" />
                        </Column>

                        <Column >
                            <Text text="Znumber" />
                        </Column>

                    </columns>
                    <items>
                        <ColumnListItem type="Active" id="colss">
                            <cells>
                                <Text text="{Data1>Name}" />
                                <Text text="{Data1>Zemprole}" />
                                <Text text="{Data1>Zgender}" />
                                <Text text="{Data1>Zcity}" />
                                <Text text="{Data1>Znumber}" />
                            
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </content>
					</Panel>
				</l:SplitPane>
			</l:PaneContainer>
		</l:PaneContainer>
	</l:ResponsiveSplitter>

    </Page>
</mvc:View> 
