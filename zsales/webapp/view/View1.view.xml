                                            <filterbar:FilterGroupItem
                                                groupName="G1"
                                                label="Invoice No"
                                                groupTitle="group1"
                                                name="Invoice No"
                                                visibleInFilterBar="true"
                                            >
                                                <filterbar:control>
                                                    <MultiComboBox
                                                        selectionChange="handleSelectionChange"
                                                        selectionFinish="handleSelectionFinish"
                                                        width="200px"
                                                        id="_InvoiceNo"
                                                        visible="true"
                                                        items="{InvoiceSet>/results}"
                                                    >
                                                        <c:Item
                                                            key="{InvoiceSet>Vbeln}"
                                                            text="{InvoiceSet>Vbeln}"
                                                        />
                                                    </MultiComboBox>
                                                </filterbar:control>
                                            </filterbar:FilterGroupItem>

                                            <filterbar:FilterGroupItem
