                                    <ui:columns>
                                        <ui:Column
                                            filterProperty="Vbeln"
                                            sortProperty="Vbeln"
                                        >
                                            <Label text="Invoice No" />
                                            <ui:template>
                                                <Link
                                                    text="{InvoiceSet>Vbeln}"
                                                    wrapping="true"
                                                    press="onInvoice"
                                                />
