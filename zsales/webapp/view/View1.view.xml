                                            <Label text="Line Iteam" />
                                            <ui:template>
                                                <Text
                                                    text="{DeliverySet>Posnr}"
                                                    wrapping="true"
                                                />
                                            </ui:template>
                                        </ui:Column>
                                        <ui:Column
                                            filterProperty="Bldat"
                                            sortProperty="Bldat"
                                        >
                                            <Label text="Document Date" />
                                            <ui:template>
                                                <Text
                                                    text="{path:'DeliverySet>Bldat', type:'sap.ui.model.type.DateTime',formatOptions:{ pattern:'dd-MM-yyyy' } }"
                                                    wrapping="true"
                                                />
                                            </ui:template>
                                            <!-- text="{DeliverySet>Bldat}" -->
                                        </ui:Column>
                                        <ui:Column
                                            filterProperty="Kunag"
                                            sortProperty="Kunag"
                                        >
                                            <Label text="Sold to party" />
                                            <ui:template>
                                                <Text
                                                    text="{DeliverySet>Kunag}"
                                                    wrapping="true"
                                                />
                                            </ui:template>
                                        </ui:Column>
                                        <ui:Column
                                            filterProperty="Kunnr"
                                            sortProperty="Kunnr"
                                        >
                                            <Label text="Ship to Party" />
                                            <ui:template>
                                                <Text
                                                    text="{DeliverySet>Kunnr}"
                                                    wrapping="true"
                                                />
                                            </ui:template>
                                        </ui:Column>
                                        <ui:Column
                                            filterProperty="Vkorg"
                                            sortProperty="Vkorg"
                                        >
                                            <Label text="Sales Org" />
                                            <ui:template>
                                                <Text
                                                    text="{DeliverySet>Vkorg}"
                                                    wrapping="true"
                                                />
                                            </ui:template>
                                        </ui:Column>

                                        <ui:Column
                                            filterProperty="Matnr"
                                            sortProperty="Matnr"
                                        >
                                            <Label text="Material" />
                                            <ui:template>
                                                <Text
                                                    text="{DeliverySet>Matnr}"
                                                    wrapping="true"
                                                />
                                            </ui:template>
                                        </ui:Column>
                                        <ui:Column
