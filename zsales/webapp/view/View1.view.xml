                                        </ui:RowAction>
                                    </ui:rowActionTemplate>
                                </ui:Table>
                            </f:content>
                        </f:DynamicPage>
                    </IconTabFilter>
                    <IconTabFilter
                        key="Invoice"
                        text="Invoice"
                        icon="sap-icon://form"
                        iconColor="Contrast"
                        count="{=${InvoiceSet>/results}.length}"
                    >
                        <f:DynamicPage
                            id="Invoice"
                            preserveHeaderStateOnScroll="true"
                            headerExpanded="{/headerExpanded}"
