<mvc:View
	controllerName="tabledraganddrop.controller.View1"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	height="100%">
	<Page
title="Capture Previous Days by Division"
		showHeader="true"
		enableScrolling="true"
		class="sapUiContentPadding">
		<content>
		
		   <f:SimpleForm
                id="SimpleFormChange480_Trial"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="3"
                columnsL="2"
                columnsM="2"
                singleContainerFullSize="false"
            >
                <f:content>
                   
                    
                            <Label
                                text="Society"
                              
                            />

                          
                             <MultiComboBox
                                id="idname"
                                items="{
			            	path: 'Name>/', 
				            sorter: { path: 'Name' }
                             }"
                            width="12.5rem"
                            selectedKeys = "{ 
                                path: 'Name>/'
                            }"
                            >
                                <c:Item
                                    key="{Name>}"
                                    text="{Name>}"
                                />
                            </MultiComboBox>
                      
                       
                  
                </f:content>
            </f:SimpleForm>
			<HBox renderType="Bare">
				<!-- <mvc:XMLView id="availableProducts" viewName="sap.m.sample.TableDnD.AvailableProducts" async="true"/> -->
                	<Table
		id="table"
		mode="SingleSelectMaster"
		growing="true"
		growingThreshold="10"
		beforeOpenContextMenu="onBeforeOpenContextMenu"
		items="{
			path: 'oModel>/'
		}">
		
			<!-- filters: {path: 'Name', operator: 'EQ', value1: 'Teja'} -->
		<contextMenu>
			<Menu>
				<MenuItem text="Move to Selected Products" press="moveToSelectedProductsTable" />
			</Menu>
		</contextMenu>
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Available Products" />
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Product Name" />
			</Column>
			<Column>
				<Text text="Category" />
			</Column>
			<Column
				hAlign="End"
				width="6rem">
				<Text text="Quantity" />
			</Column>
		</columns>
		<dragDropConfig>
			<dnd:DragInfo
				groupName="available2selected"
				sourceAggregation="items" />
			<dnd:DropInfo
				groupName="selected2available"
				drop="onDropAvailableProductsTable" />
		</dragDropConfig>
		<items>
			<ColumnListItem press="onRowAvailable">
				<cells>
					<Text text="{oModel>Name}" wrapping="false" />
					<Text text="{Category}" wrapping="false" />
					<Text text="{
						path: 'Quantity',
						type: 'sap.ui.model.type.Integer'
					}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
				<VBox justifyContent="Center" class="sapUiTinyMarginBeginEnd">
					<Button
						class="sapUiTinyMarginBottom"
						icon="sap-icon://navigation-right-arrow"
						tooltip="Move to selected"
						press="moveToSelectedProductsTable"/>
					<Button
						icon="sap-icon://navigation-left-arrow"
						tooltip="Move to available"
						press="moveToAvailableProductsTable"/>
				</VBox>
				<!-- <mvc:XMLView id="selectedProducts" viewName="sap.m.sample.TableDnD.SelectedProducts" async="true"/> -->
                	<Table
		id="idSelcetedTable"
		mode="SingleSelectMaster"
		growing="true"
		growingThreshold="10"
		beforeOpenContextMenu="onBeforeOpenContextMenu"
		items="{
			path: 'oModel1>/'
			
		}"
		
		noDataText="Please drag-and-drop products here.">
		<!-- filters: {path: 'Rank', operator: 'GT', value1: '0'},
			sorter: {path: 'Rank', descending: true} -->
		<contextMenu>
			<Menu>
				<MenuItem text="Move to Available Products" press="moveToAvailableProductsTable" />
				<MenuItem text="Move up" press="moveUp" />
				<MenuItem text="Move down" press="moveDown" />
			</Menu>
		</contextMenu>
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Selected Products" />
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://navigation-up-arrow"
					tooltip="Move up"
					press="moveUp"/>
				<Button
					icon="sap-icon://navigation-down-arrow"
					tooltip="Move down"
					press="moveDown"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Product Name" />
			</Column>
			<Column>
				<Text text="Category" />
			</Column>
			<Column
				hAlign="End"
				width="6rem">
				<Text text="Quantity" />
			</Column>
		</columns>
		<dragDropConfig>
			<dnd:DragInfo
				groupName="selected2available"
				sourceAggregation="items" />
			<dnd:DropInfo
				groupName="available2selected"
				targetAggregation="items"
				dropPosition="Between"
				drop="onDropSelectedProductsTabl" />
			<dnd:DragDropInfo
				sourceAggregation="items"
				targetAggregation="items"
				dropPosition="Between"
				drop="onDropSelectedProductsTabl"/>
		</dragDropConfig>
		<items>
			<ColumnListItem press="onRowSelcted">
				<cells>
					<Text text="{oModel1>Name}" wrapping="false" />
					<Text text="{oModel1>Employeid}" wrapping="false" />
					<Text text="{
						path: 'Quantity',
						type: 'sap.ui.model.type.Integer'
					}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
			</HBox>
			   <f:SimpleForm
                id="SimpleFormChange4_Trial"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="3"
                columnsL="2"
                columnsM="2"
                singleContainerFullSize="false"
            >
                <f:content>
                   
                    
                            <Label
                                text="Days"
                              
                            />

                          
                             <MultiComboBox
                                id="idna"
                                items="{
			            	path: 'Name>/', 
				            sorter: { path: 'Name' }
                             }"
                            width="12.5rem"
                            selectedKeys = "{ 
                                path: 'Name>/'
                            }"
                            >
                                <c:Item
                                    key="{Name>}"
                                    text="{Name>}"
                                />
                            </MultiComboBox>
                      
                       
                  
                </f:content>
            </f:SimpleForm>
		</content>
	</Page>
</mvc:View>